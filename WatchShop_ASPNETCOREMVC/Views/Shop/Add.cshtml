@model WatchShop_ASPNETCOREMVC.ViewModels.AddWatchViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
}

<style>
    .field-validation-error {
        color: #b94a48;
    }

    input.input-validation-error {
        border: 1px solid #b94a48;
    }

    input.valid {
        border: 1px solid #16a085;
    }

    .validation-summary-errors {
        color: #b94a48;
    }
</style>

<h1>Add Watch</h1>

<form method="post" asp-action="Add" enctype="multipart/form-data" class="mt-5">
    <div asp-validation-summary="ModelOnly"></div>
    <div>
        <label for="" class="form-label">Name</label>
        <input type="text" class="form-control" asp-for="Name">
        <span asp-validation-for="Name"></span><br />
    </div>

    <div class="form-group">
        <label asp-for="ImageFile" class="control-label"></label>
        <input asp-for="ImageFile" accept="image/*" />

    </div>

    <div class="mb-3">
        <label for="" class="form-label">Price</label>
        <input type="number" class="form-control" asp-for="Price">
        <span asp-validation-for="Price"></span><br />
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Name of company</label>
        <input type="text" class="form-control" asp-for="CompanyName">
        <span asp-validation-for="CompanyName"></span><br />
    </div>

    <br />

    <button type="submit" class="btn btn-primary" value="Send">Submit</button>
</form>

<script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.5.1.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.17.0/jquery.validate.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.10/jquery.validate.unobtrusive.min.js"></script>
